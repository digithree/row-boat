<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/settings_main_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/settings_title"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold"
            android:text="@string/settings_pdf_title" />

        <!-- text size -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_v"
            android:textSize="@dimen/settings_item"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/settings_pdf_text_size" />

        <SeekBar
            android:id="@+id/sb_settings_pdf_text_size"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_inner_v"
            android:max="2" />

        <TextView
            android:id="@+id/tv_settings_pdf_text_size_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_inner_v"
            android:gravity="center"
            android:textSize="@dimen/settings_value"
            android:textColor="@android:color/tertiary_text_light"
            android:text="@string/settings_size_medium"/>

        <!-- line spacing size -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_v"
            android:textSize="@dimen/settings_item"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/settings_pdf_line_spacing_size" />

        <SeekBar
            android:id="@+id/sb_settings_pdf_line_sp_size"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_inner_v"
            android:max="2" />

        <TextView
            android:id="@+id/tv_settings_pdf_line_sp_size_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_inner_v"
            android:gravity="center"
            android:textSize="@dimen/settings_value"
            android:textColor="@android:color/tertiary_text_light"
            android:text="@string/settings_size_medium"/>

        <!-- margin vert size -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_v"
            android:textSize="@dimen/settings_item"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/settings_pdf_margin_vert_size" />

        <SeekBar
            android:id="@+id/sb_settings_pdf_margin_vert_size"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_inner_v"
            android:max="2" />

        <TextView
            android:id="@+id/tv_settings_pdf_margin_vert_size_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_inner_v"
            android:gravity="center"
            android:textSize="@dimen/settings_value"
            android:textColor="@android:color/tertiary_text_light"
            android:text="@string/settings_size_medium"/>

        <!-- margin horz size -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_v"
            android:textSize="@dimen/settings_item"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/settings_pdf_margin_horz_size" />

        <SeekBar
            android:id="@+id/sb_settings_pdf_margin_horz_size"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_inner_v"
            android:max="2" />

        <TextView
            android:id="@+id/tv_settings_pdf_margin_horz_size_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_item_margin_inner_v"
            android:gravity="center"
            android:textSize="@dimen/settings_value"
            android:textColor="@android:color/tertiary_text_light"
            android:text="@string/settings_size_medium"/>
    </LinearLayout>
</layout>