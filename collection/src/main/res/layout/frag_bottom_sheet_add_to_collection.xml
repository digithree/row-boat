<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_add_to_collection_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/bottom_sheet_vertical_inner_margin"
            android:textSize="@dimen/bottom_sheet_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add_to_collection_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/bottom_sheet_vertical_inner_margin"
                android:layout_marginEnd="@dimen/bottom_sheet_vertical_inner_margin"
                android:text="@string/cancel"/>

            <Button
                android:id="@+id/btn_add_to_collection_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/bottom_sheet_vertical_inner_margin"
                android:text="@string/add"/>
        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cg_add_to_collection_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottom_sheet_vertical_medium_margin"
            android:layout_marginStart="@dimen/bottom_sheet_vertical_inner_margin"
            android:layout_marginEnd="@dimen/bottom_sheet_vertical_inner_margin"
            android:layout_marginBottom="@dimen/bottom_sheet_vertical_inner_margin"
            app:chipSpacing="@dimen/chip_spacing"
            />

    </LinearLayout>
</layout>