<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/local_collection_fragment">

    <fragment
        android:id="@+id/local_collection_fragment"
        android:name="co.simonkenny.row.collection.CollectionFragment"
        android:label="LocalCollectionFragment"
        tools:layout="@layout/frag_collection"/>

    <fragment
        android:id="@+id/reader_fragment"
        android:name="co.simonkenny.row.reader.ReaderFragment"
        android:label="ReaderFragment"
        tools:layout="@layout/frag_reader"/>

    <action
        android:id="@+id/search_action"
        app:destination="@+id/search_navigation">
        <argument
            android:name="query"
            app:argType="string"
            app:nullable="false" />
    </action>

    <include app:graph="@navigation/search_navigation" />

    <include app:graph="@navigation/settings_navigation" />
</navigation>